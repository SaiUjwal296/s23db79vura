

block content
  h1= title
  
  button.btn.btn-danger.btn-sm(delete-btn, onclick=`createTshirt()`) Create
  
  div.container-fluid
    div.row
      each Tshirt, index in results 
        div.col-sm-4.mb-3.text-center(style=`background-color: ${Tshirt.color}; color: white; padding: 10px; border-radius: 5px; cursor: pointer;`, onclick=`buy(${index})`)
          | #{Tshirt.size}, #{Tshirt.color}, #{Tshirt.price} Rs
          div.row-sm-2.m-1 Item #{Tshirt.size}(#{Tshirt.color}) is #{Tshirt.price}
          button.btn.btn-primary.ml-1(onclick=`dispatch("/Tshirts/update?id=${Tshirt._id}")`) Update
          button.btn.btn-danger.btn-sm(delete-btn, onclick=`deleteTshirt('${Tshirt._id}')`) Delete
          button.btn.btn-danger.btn-sm(delete-btn, onclick=`detailTshirt('${Tshirt._id}')`) Detail

  script.

    function dispatch(path){
      window.location.href = path;
    }
    function createTshirt() {
      window.location.href='/Tshirts/create';
    }
    function deleteTshirt(id) {
      window.location.href='/Tshirts/delete/?id='+id;
    }
    function detailTshirt(id) {
      window.location.href='/Tshirts/detail/?id='+id;
    }

style.
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa;
    color: #212529;
  }

  .container-fluid {
    margin-top: 20px;
  }

  .col-sm-4 {
    border: 1px solid #dee2e6;
    border-radius: 5px;
    overflow: hidden;
    transition: transform 0.3s;
  }

  .col-sm-4:hover {
    transform: scale(1.05);
  }

  .btn-danger {
    background-color: #dc3545;
    color: #fff;
  }

  .btn-primary {
    background-color: #007bff;
    color: #fff;
  }

  .btn-danger:hover, .btn-primary:hover {
    filter: brightness(90%);
  }
